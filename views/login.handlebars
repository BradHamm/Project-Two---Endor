{{!-- Login for existing users --}}
<div class="col-md-5 login-card not-blu row justify-content-center">
  <h2 class="login-title">Login</h2>

  <form class="form login-form">
    <div class="form-group login-card-body">
      <input class="form-input" type="text" id="email-login" placeholder="Email"/>
    </div>
    <div class="form-group login-card-body">
      <input class="form-input" type="password" id="password-login" placeholder="Password"/>
    </div>
    <div class="row d-flex justify-content-center">
      <button class="col btn btn-primary mid-blu col-md-5" type="submit" onclick="openPopup()">New User</button>
      <div class="col-md-1"></div>
      <button class="col btn btn-primary mid-blu col-md-5" type="submit">Login</button>
    </div>
  </form>
</div>

{{!-- Create New User Popup --}}
<div class="close-popup" id="popup">
  <div class="login-popup-stuff">
    <!-- CLOSE BUTTON -->
    <div class="button-container">
      <button class="btn btn-outline-success my-2 my-sm-0 lite-blu text-white search login-popup-close-button" type="button" onclick="closePopup()">âœ–</button>
    </div>
    
    <!-- title -->
    <div class="card mid-blu mt-2">
      <div class="card-body">
        <h5 class="col create-title mt-2 mb-2">Create New User</h5>
      </div>
    </div>

    {{!-- Signup for new users --}}
    <!-- create new user main section -->
    <div class="card mt-2 dark-blu">
      <div class="card-body m-2">
        <!-- forms for sign up -->
        <div class="card not-blu signup-card">
          <div class="card-body m-2">
            <form class="form signup-form">
              <div class="form-group">
                <input class="form-input form-control" type="text" id="name-signup" placeholder="Username"/>
              </div>
              <div class="form-group">
                <input class="form-input form-control" type="text" id="email-signup" placeholder="Email"/>
              </div>
              <div class="form-group">
                <input class="form-input form-control" type="password" id="password-signup" placeholder="Password"/>
              </div>
              <div class="row justify-content-center">
                <button class="btn btn-primary my-2 my-sm-0 lite-blu text-white search col-4 ml-4" type="submit">Create</button>
                <button class="btn btn-outline-success my-2 my-sm-0 lite-blu text-white search col-4 ml-4" type="submit" onclick="closePopup()">Cancel</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>
