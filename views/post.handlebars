<div class="text-center">
  {{!-- Post info --}}
  <div class="post-card mid-blu text-white">
    <h2 class="post-title text-white" post-id="{{id}}"><i class="fa-solid fa-code text-white"></i> {{name}}</h2>
    <p class="m-3">{{description}}</p>
    <p><b>Created by {{user.name}} on {{format_date date_created}}</b></p>
  </div>

  {{!-- Option to create add a commment if logged in --}}
  {{#if logged_in}}
  <div class="card comment-card not-blu">
    <h5 class="card-header lite-blu text-black">Leave a Comment</h5>
    <form class="card-body new-comment-form post-title" post-id="{{id}}" id="comment-form">
      <div class="form-group">
      <textarea class="form-input" id="post-comment" name="post-comment"></textarea>
      </div>
      <button type="submit" class="btn btn-primary btn-comment dark-blu" data-id="{{comment.id}}">Comment</button>
    </form>
  </div>
  {{/if}}

  {{!-- List of comments --}}
  {{#if comments.length}}
  <div class="comment-list">
    <h4 class="text-black">Current Comments:</h4>

    {{#each comments as |comment|}}
    <div class="card comment-card not-blu">
      <div class="">
        <p style="margin-top: 10px; margin-bottom: 15px;">
        {{comment.comment_text}}
        </p>
        <p class="card-footer lite-blu" style="margin-bottom: 0px;">Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
      </div>
      {{!-- Future implementation to delete comment --}}
      {{!-- {{#if logged_in}} --}}
      {{!-- <div class="col-md-4">
        <button class="btn btn-sm btn-danger btn-delete" data-id="{{comment.id}}">DELETE</button>
      </div> --}}
      {{!-- {{/if}} --}}
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/post.js"></script>